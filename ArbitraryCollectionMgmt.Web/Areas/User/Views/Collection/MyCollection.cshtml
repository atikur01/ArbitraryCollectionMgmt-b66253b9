<body onload="loadMyCollection()">
    <div class="col-6">
        <h2>Your collection list</h2>
    </div>
    <div>
        <div class="row pt-2 pb-1">
            <div class="col-6 text-begin">
                <a asp-controller="Collection" asp-action="CreateMyCollection" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create new collection</a> &nbsp;&nbsp;&nbsp;
            </div>
        </div>
        <div class="row pb-1">
            <div class="col-2">
                <label class="fw-bold text-muted" style="text-align: left;">Filter by category</label>
                <select id="categoryId" asp-items="ViewBag.catList" class="form-select">
                    <option value="0" selected>All</option>
                </select>
            </div>
        </div>
    </div>


    <div>
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Collection Id</th>
                    <th>Collection Name</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>
</body>

<script src="~/js/collection/user/loadMyCollection.js"></script>
