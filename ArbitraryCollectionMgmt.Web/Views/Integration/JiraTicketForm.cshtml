<div class="row pt-lg-4">
    <div class="col-4">
    </div>
    <div class="col-4 border border-primary bg-gradient p-4" style="border-radius: 0.3rem;">
        <div class="text-md-center">
            <h3><i class="bi bi-headset"></i> Support ticket</h3>
        </div>
        <form method="post">
            <input type="hidden" name="referenceUrl" value="@ViewBag.referenceUrl" ; />
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="fw-bold">Problem summary</label>
                <input type="text" name="summary" class="form-control" placeholder="a brief summary" value="" required />
            </div>
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="fw-bold">Priority</label>
                <select name="priority" class="form-select" required>
                    <option value="" selected disabled>- Select -</option>
                    <option value="Lowest">Lowest</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                    <option value="Highest">Highest</option>
                </select>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success mb-4"><i class="bi bi-send-plus"></i> Create</button>
            </div>
        </form>

    </div>
    <div class="col-4">
    </div>

</div>

